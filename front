<meta charset="UTF-8">


<!DOCTYPE html>
<html>
<head>
  <title>Formulario de Registro</title>
  <style>
    
    form {
      width: 400px;
      margin: 0 auto;
    }
    label {
      display: block;
      margin-bottom: 5px;
    }
    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="tel"],
    select {
      width: 100%;
      padding: 5px;
      margin-bottom: 10px;
    }
    input[type="checkbox"] {
      margin-bottom: 10px;
    }
    button {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Formulario de Registro</h1>
  <form id="registration-form">
    <label for="brand-name">Nombre de la Marca:</label>
    <input type="text" id="brand-name" name="brandName" required>

    <label for="email">Correo:</label>
    <input type="email" id="email" name="email" required>

    <label for="password">Contraseña:</label>
    <input type="password" id="password" name="password" required>

    <label for="phone">Teléfono:</label>
    <input type="tel" id="phone" name="phone" required>

    <label for="payment-level">Nivel de Paga:</label>
    <input type="text" id="payment-level" name="paymentLevel" required>

    <label for="payment-status">¿El pago está vigente?</label>
    <input type="checkbox" id="payment-status" name="paymentStatus">

    <label for="social-media">Red Social:</label>
    <select id="social-media" name="socialMedia">
      <option value="facebook">Facebook</option>
      <option value="twitter">Twitter</option>
      <option value="instagram">Instagram</option>
      
    </select>

    <label for="username">Nombre de Usuario:</label>
    <input type="text" id="username" name="username" required>

    <label for="join-date">Fecha de Unión:</label>
    <input type="date" id="join-date" name="joinDate" required>

    <button type="submit">Registrar</button>
  </form>

  <script>
    // JavaScript para enviar el formulario al backend
    document.getElementById('registration-form').addEventListener('submit', function(event) {
      event.preventDefault(); // Evita el envío del formulario por defecto

      
      var brandName = document.getElementById('brand-name').value;
      var email = document.getElementById('email').value;
      var password = document.getElementById('password').value;
      var phone = document.getElementById('phone').value;
      var paymentLevel = document.getElementById('payment-level').value;
      var paymentStatus = document.getElementById('payment-status').checked;
      var socialMedia = document.getElementById('social-media').value;
      var username = document.getElementById('username').value;
      var joinDate = document.getElementById('join-date').value;

      
      var formData = {
        brandName: brandName,
        email: email,
        password: password,
        phone: phone,
        paymentLevel: paymentLevel,
        paymentStatus: paymentStatus,
        socialMedia: socialMedia,
        username: username,
        joinDate: joinDate
      };

      
      fetch('/api/register', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(formData)
      })
      .then(function(response) {
        if (response.ok) {
          alert('Registro exitoso');
          
        } else {
          alert('Error en el registro');
        }
      })
      .catch(function(error) {
        console.error('Error:', error);
      });
    });
  </script>
</body>
</html>
